// #define int long long
//const int N = 1e5+9;
//int arr[N];

void solve(vector<int>&v, int n){
    int l = 0, r = n-1;
    int ans = 0;
    while(l <= r){
        int mid = (l+r)/2;
        if(v[mid] > v[mid+1]){
            ans = mid+1;
            break;;
        }
        else if(v[mid]<v[mid-1]){
            ans = mid - 1;
            break;
        }
        if(v[r] > v[mid]){
            r = mid-1;
        }
        else{
            l = mid+1;
        }
    }
    cout << ans << '\n';
}

int32_t main(){
    ios_base::sync_with_stdio(0);
    cin.tie(0);
    
    vector<int>v({11,12,13,15,16,1,2,3,4,4,4,4,5});
    solve(v,v.size());
  

}
